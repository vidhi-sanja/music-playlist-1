<!-- JAVASCRIPT -->
<script>
let currentSong = null;
let audio = document.getElementById('audioPlayer');
let info = document.getElementById('song-info');
let playBtn = document.getElementById('play-btn');

function showPage(page) {
    document.getElementById('home-page').style.display = "none";
    document.getElementById('search-page').style.display = "none";
    document.getElementById('liked-page').style.display = "none";
    document.getElementById(page + '-page').style.display = "block";

    document.querySelectorAll('.sidebar a').forEach(a => a.classList.remove('active'));
    event.target.classList.add('active');
}

function playSong(title, src) {
    currentSong = src;
    audio.src = src;
    audio.play();
    info.textContent = "‚ñ∂ Playing: " + title;
    playBtn.classList.replace('fa-play', 'fa-pause');
}

function togglePlay() {
    if (!audio.src) return;
    if (audio.paused) {
        audio.play();
        playBtn.classList.replace('fa-play', 'fa-pause');
    } else {
        audio.pause();
        playBtn.classList.replace('fa-pause', 'fa-play');
    }
}

function nextSong() {
    info.textContent = "‚ñ∂ Next song feature coming soon!";
}

function prevSong() {
    info.textContent = "‚ñ∂ Previous song feature coming soon!";
}
</script>

